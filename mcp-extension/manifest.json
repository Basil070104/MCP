{
  "name": "WordWare Extension",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Chrome extension with WordWare integration",
  "icons": {
    "48": "favicon.ico"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "favicon.ico"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "nativeMessaging"
  ]
}